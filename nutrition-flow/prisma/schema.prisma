generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    databaseUrl = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

// Dropdown choices using enum
enum ActivityLevel {
  SEDENTARY
  LIGHT
  MODERATE
  ACTIVE
  VERY_ACTIVE
}

enum Goal {
  BULK
  CUT
  MAINTAIN
}

enum DietaryType {
  NONE
  VEGAN
  VEGETARIAN
  KETO
  HALAL
  GLUTEN_FREE
  PESCATARIAN
}

model User {
  id            String   @id

  email         String   @unique
  password      String
  firstName     String
  lastName      String
  age           Int

  currentWeight Float
  targetWeight  Float?        // optional 
  height        Float

  activityLevel ActivityLevel // dropdown enforced
  goal          Goal          
  dietaryType   DietaryType   

  allergies     String[]      // if none store []

  meals         Meal[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
         
}
model Meal {
  id        String   @id @default(uuid()) //uuid gives a complex string,to protect from hackers 

  name      String
  imagePath String  // store supabase storage PATH, not full URL

  calories  Float?
  protein   Float?
  carbs     Float?
  fats      Float?

  loggedAt  DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

//Does not store new data when @@, only just organize the data we already have
  @@index([userId]) //Creates a list of all meals sorted by who ate them. So that it is faster to find the history of all the meals a user ate.
  @@index([loggedAt]) //Crestes a list of all meals sorted by date/time. 
}
